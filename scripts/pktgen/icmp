packet-generator new {
  name icmp
  limit 10
  node ip4-input
  size 64-64
  no-recycle
  data {
    ICMP: 1.2.3.4 -> 5.6.7.8
    ICMP echo_request
    incrementing 100
  }
}

ip route 5.6.7.8/32 via local
ip route 1.2.3.4/32 via local

tr add pg-input 100

mmb enable pg0
mmb add ip-ver 4 ip-proto icmp ip-saddr 1.2.3.4 ip-daddr 5.6.7.8 drop
